<Window x:Class="nookenApp.Views.SensorDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nookenApp.Views"
        mc:Ignorable="d"
        Title="SensorDataWindow" Height="350" Width="525">
    <Grid Margin="0,0,0,2">
        <Button x:Name="ReadDataButton" Content="Read Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10" Click="ReadDataButton_Click"/>
        <TextBox x:Name="DataTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Width="480" Margin="10,50,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="125,10,0,0" VerticalAlignment="Top" Height="31" Width="107" Click="StopReadingButton_Click"/>
    </Grid>
</Window>
