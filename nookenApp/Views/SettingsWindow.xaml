<Window x:Class="nookenApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Serial Port Settings" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Port Name:"/>
            <TextBox x:Name="PortNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="API URL:"/>
            <TextBox x:Name="ApiUrlTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Database Connection String:"/>
            <TextBox x:Name="ConnectionStringTextBox" Margin="0,0,0,10"/>

            <Button Content="Save" Width="100" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
